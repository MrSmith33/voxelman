{
	"name" : "voxelman",

	"description" : "Voxel engine",
	"authors" : [ "Andrey Penechko" ],
	"license" : "BSL-1.0",

	"dependencies" : {
		"cbor-d" : "==0.5.0",
		"dlib" : "==0.8.1",
		"derelict-enet": "==2.0.0",
		"derelict-glfw3" : "==2.0.0",
		"derelict-gl3" : "==1.0.18",
		"sdlang-d" : "==0.9.4"
	},

	"targetPath" : "builds/default",
	"workingDirectory" : "builds/default",

	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfoC", "alwaysStackFrame"]
		}
	},

	"libs-posix": ["sqlite3"],
	"sourceFiles-windows-x86": ["lib/32/sqlite3.lib", "lib/32/lz4.lib", "lib/32/lmdb.lib"],
	"sourceFiles-windows-x86_64": ["lib/64/sqlite3.lib", "lib/64/lz4.lib", "lib/64/lmdb.lib"],

	"configurations": [
		{
			"name" : "client",
			"targetName" : "client",
			"targetType" : "executable",
			"excludedSourceFiles" : ["source/servermain.d"],
			"mainSourceFile" : "source/clientmain.d",
			"versions" : ["SIDE_CLIENT"],
			"sourcePaths" : [ "source", "plugins" ],
			"importPaths" : [ "source", "plugins" ]
		},
		{
			"name": "server",
			"targetName" : "server",
			"targetType": "executable",
			"excludedSourceFiles" : ["source/clientmain.d"],
			"mainSourceFile" : "source/servermain.d",
			"versions" : ["SIDE_SERVER"],
			"sourcePaths" : [ "source", "plugins" ],
			"importPaths" : [ "source", "plugins" ]
		},
		{
			"name": "lib",
			"targetType": "library",
			"excludedSourceFiles" : ["source/clientmain.d", "source/servermain.d"],
			"targetPath" : "./",
			"sourcePaths" : [ "source" ],
			"importPaths" : [ "source" ]
		}
	]
}
