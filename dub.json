{
	"name" : "voxelman",

	"description" : "Voxel engine",
	"authors" : [ "Andrey Penechko" ],
	"license" : "BSL-1.0",

	"dependencies" : {
		"cbor-d" : {"path" : "./deps/cbor"},
		"dlib" : {"path" : "./deps/dlib"},
		"derelict-enet": "==2.0.0",
		"derelict-glfw3" : "==2.0.0",
		"derelict-gl3" : "==1.0.18",
		"sdlang-d" : "==0.9.5"
	},

	"targetPath" : "builds/default",
	"workingDirectory" : "builds/default",

	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfoC", "alwaysStackFrame"]
		}
	},

	"libs-posix": ["sqlite3"],
	"sourceFiles-windows-x86": ["lib/32/sqlite3.lib", "lib/32/lz4.lib", "lib/32/lmdb.lib"],
	"sourceFiles-windows-x86_64": ["lib/64/sqlite3.lib", "lib/64/lz4.lib", "lib/64/lmdb.lib"],

	"lflags-windows": [
		"libcmt.lib",
		"/nodefaultlib:msvcrt.lib",
		"/nodefaultlib:vcruntime.lib"
	],

	"configurations": [
		{
			"name" : "exe",
			"targetName" : "voxelman",
			"targetType" : "executable",
			"mainSourceFile" : "source/main.d",
			"sourcePaths" : [ "source", "plugins" ],
			"importPaths" : [ "source", "plugins" ]
		},
		{
			"name": "lib",
			"targetType": "library",
			"excludedSourceFiles" : ["source/main.d"],
			"targetPath" : "./",
			"sourcePaths" : [ "source", "plugins" ],
			"importPaths" : [ "source", "plugins" ]
		}
	]
}
