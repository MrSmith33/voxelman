{
	"name" : "voxelman",

	"description" : "Voxel engine",
	"authors" : [ "Andrey Penechko" ],
	"license" : "BSL-1.0",

	"dependencies" : {
		"cbor-d" : "~>0.3.3",
		"anchovy" : {"version" : "~master"},
        "derelict-enet": "==1.3.10"
	},

    "targetPath" : "bin",
    "workingDirectory" : "bin",
	
	"sourcePaths" : [ "source" ],

    "copyFiles-windows-x86" : ["lib/*.dll"],
    "copyFiles-windows-x86_64" : ["lib64/*.dll"],

	"configurations": [
        {
            "name" : "client",
            "targetName" : "client",
            "targetType" : "executable",
            "excludedSourceFiles" : ["source/voxelman/server/*", "source/servermain.d"],
            "mainSourceFile" : "source/clientmain.d"
        },
        {
            "name": "server",
            "targetName" : "server",
            "targetType": "executable",
            "excludedSourceFiles" : ["source/voxelman/client/*", "source/clientmain.d"],
            "mainSourceFile" : "source/servermain.d"
        }
    ]
}